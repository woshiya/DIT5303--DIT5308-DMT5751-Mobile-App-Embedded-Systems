<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
          />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="#2D3748"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_bell"
            android:contentDescription="Notifications"
             />
    </LinearLayout>

    <!-- WELCOME TEXT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, User!"
            android:textColor="#2D3748"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here you can find the reminders for your medication."
            android:textColor="#718096"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <!-- HORIZONTAL CALENDAR -->
    <HorizontalScrollView
        android:id="@+id/weekScroll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/topBar"
        android:layout_marginTop="100dp"
        android:scrollbars="none"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/weekContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </HorizontalScrollView>

    <!-- MEDICATION HEADER -->
    <LinearLayout
        android:id="@+id/headerTimeMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E2E8F0"
        android:padding="16dp"
        android:layout_below="@id/weekScroll"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Medication"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- DYNAMIC MEDICATION LIST -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerTimeMed"
        android:layout_above="@id/bottomNavInclude"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/medicationList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Medications will be added here from Java code -->
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <include
        android:id="@+id/bottomNavInclude"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>