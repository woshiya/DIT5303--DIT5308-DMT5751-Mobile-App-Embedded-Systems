<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="100dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Normal square background -->
    <View
        android:id="@+id/normalBackground"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/day_normal" />

    <!-- Selected brown square overlay -->
    <View
        android:id="@+id/selectedCircle"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/day_selected"
        android:visibility="gone" />

    <!-- Text content -->
    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textColor="#90A4AE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

</FrameLayout>